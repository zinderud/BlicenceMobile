# Production Environment Configuration
NODE_ENV=production

# API Configuration
API_BASE_URL=https://api.blicence.com
API_TIMEOUT=15000
API_RETRY_ATTEMPTS=5

# Blockchain Configuration
BLOCKCHAIN_NETWORK=mainnet
BLOCKCHAIN_NETWORK_ID=137
BLOCKCHAIN_RPC_URL=https://polygon-rpc.com

# Contract Addresses (Production)
CONTRACT_BLICENCE=0xPROD1234567890123456789012345678901234
CONTRACT_NFT=0xPROD2345678901234567890123456789012345
CONTRACT_MARKETPLACE=0xPROD3456789012345678901234567890123456

# Feature Flags
ENABLE_NFT_MARKETPLACE=true
ENABLE_QR_SCANNING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_DARK_MODE=true
ENABLE_MULTI_LANGUAGE=true

# Logging and Monitoring
ENABLE_LOGGING=false
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=error
MAX_LOG_FILE_SIZE=5242880
LOG_RETENTION_DAYS=30

# Security Configuration
ENCRYPTION_ENABLED=true
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=10
BIOMETRIC_TIMEOUT=300000

# UI Configuration
ANIMATIONS_ENABLED=true
HAPTIC_FEEDBACK=true
AUTO_THEME=true
DEFAULT_FONT_SIZE=medium

# Notification Configuration
NOTIFICATIONS_ENABLED=true
NOTIFICATION_BADGE=true
NOTIFICATION_SOUND=true
NOTIFICATION_VIBRATION=true
NOTIFICATION_CATEGORIES=license,payment,system

# Analytics and Tracking
ANALYTICS_PROVIDER=firebase
CRASHLYTICS_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# App Store Configuration
APP_VERSION=1.0.0
BUILD_NUMBER=1
MINIMUM_OS_VERSION_ANDROID=21
MINIMUM_OS_VERSION_IOS=13.0

# Development/Debug (Disabled in Production)
FLIPPER_ENABLED=false
DEV_MENU_ENABLED=false
REMOTE_DEBUGGING=false
HOT_RELOADING=false

# External Services
FIREBASE_PROJECT_ID=blicence-mobile-prod
FIREBASE_API_KEY=AIzaSyExample_Production_Key
FIREBASE_AUTH_DOMAIN=blicence-mobile-prod.firebaseapp.com
FIREBASE_DATABASE_URL=https://blicence-mobile-prod.firebaseio.com
FIREBASE_STORAGE_BUCKET=blicence-mobile-prod.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:android:abcdef1234567890

# Push Notification Configuration
FCM_SERVER_KEY=AAAA_Production_FCM_Server_Key
APNS_KEY_ID=PROD1234AB
APNS_TEAM_ID=TEAM123456
APNS_BUNDLE_ID=com.blicence.mobile

# Third-party Integrations
SENTRY_DSN=https://your-sentry-dsn@sentry.io/production
BUGSNAG_API_KEY=your-production-bugsnag-key
MIXPANEL_TOKEN=your-production-mixpanel-token

# CDN and Assets
ASSET_CDN_URL=https://cdn.blicence.com
IMAGE_CDN_URL=https://images.blicence.com
STATIC_CONTENT_URL=https://static.blicence.com

# Security Headers and CORS
CORS_ORIGINS=https://blicence.com,https://www.blicence.com
ALLOWED_HOSTS=api.blicence.com,blicence.com

# Performance Thresholds
SLOW_NETWORK_THRESHOLD=5000
SLOW_RENDER_THRESHOLD=2000
MEMORY_WARNING_THRESHOLD=100
CRASH_RATE_THRESHOLD=0.01

# Backup and Recovery
BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL=86400000
MAX_BACKUP_FILES=7

# Compliance and Privacy
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=2555
PRIVACY_POLICY_URL=https://blicence.com/privacy
TERMS_OF_SERVICE_URL=https://blicence.com/terms
